    "express-fileupload": "^1.4.0",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "jsonschema": "^1.4.1",
    "microinvoice": "^1.0.6",
    "mongodb": "^6.3.0",
    "mustache": "^4.2.0",
